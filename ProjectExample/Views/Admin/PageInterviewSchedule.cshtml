
@{
    ViewBag.Title = "PageInterviewSchedule";
    //Layout = "~/Views/Admin/";

    List<ProjectExample.Models.Entities.Employee> ls1 = new List<ProjectExample.Models.Entities.Employee>();
    if (ViewBag.vanca_emp != null)
    {
        ls1 = ViewBag.vanca_emp;
    }
    List<ProjectExample.Models.Entities.Cadidate> ls2 = new List<ProjectExample.Models.Entities.Cadidate>();
    if (ViewBag.cadi != null)
    {
        ls2 = ViewBag.cadi;
    }
}

<h2>PageInterviewSchedule</h2>

<!DOCTYPE html>
<html5 lang="en"
       class="light-style layout-menu-fixed layout-compact"
       dir="ltr"
       data-theme="theme-default"
       data-assets-path="../assets/"
       data-template="vertical-menu-template-free">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

        <title>Vertical Layouts - Forms | Materio - Bootstrap Material Design Admin Template</title>

        <meta name="description" content="" />

        @Styles.Render(Url.Content("~/Content/Admin/assets/img/favicon/favicon.ico"))

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&ampdisplay=swap"
              rel="stylesheet" />

        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/node-waves/node-waves.css"))

        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/core.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/theme-default.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/css/demo.css"))
        <!-- Menu waves for no-customizer fix -->
        <!-- Core CSS -->
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/apex-charts/apex-charts.css"))

        <!--Lịch-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <!-- Page CSS -->
        <!-- Helpers -->
        @Scripts.Render("~/Content/Admin/assets/vendors/js/helpers.js")

        <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
        <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
        @Scripts.Render("~/Content/Admin/assets/js/config.js")
    </head>
    <body>

        <div class="layout-wrapper layout-content-navbar">
            <div class="layout-container">
                <!-- Menu -->
                @Html.Partial("~/Views/Admin/Menu/Menu.cshtml")
                <!-- / Menu -->
                <!-- Layout container -->
                <div class="layout-page">
                    <!-- Navbar -->
                    @Html.Partial("~/Views/Admin/Menu/Navbar.cshtml")
                    <!-- / Navbar -->
                    <!-- Content wrapper -->
                    <div class="content-wrapper">
                        <!-- Content -->

                        <div class="container-xxl flex-grow-1 container-p-y">
                            <h4 class="py-3 mb-4"><span class="text-muted fw-light"></span></h4>

                            <!-- Basic Layout -->
                            <div class="row">
                                <div class="col-xl">
                                    <div class="card mb-4">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">Tạo lịch phỏng vấn</h5>
                                            <small class="text-muted float-end">Create InterView Schedule</small>
                                        </div>
                                        <div class="card-body">
                                            <form action="/Admin/CreateInteviewSchedule" method="post" enctype="multipart/form-data">
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <h7>Ứng Viên</h7>
                                                    <select name="code_cadi" id="code_cadi">
                                                        @foreach (ProjectExample.Models.Entities.Cadidate item in ls2)
                                                        {
                                                            <option value="@item.code_cadi" data-id="">@item.Name_cadidate</option>
                                                        }
                                                    </select>
                                                </div>
                                                <!--Vị trí công việc-->
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <h7>Người phỏng vấn 1</h7>
                                                    <select name="id_emp" id="id_emp">
                                                        <option value="" selected disabled></option>
                                                        @foreach (ProjectExample.Models.Entities.Employee item in ls1)
                                                        {
                                                            <option value="@item.id" data-id="">@item.username</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <h7>Người phỏng vấn 2</h7>
                                                    <select name="id_emp1" id="id_emp1">
                                                        <option value="" selected disabled></option>
                                                        @foreach (ProjectExample.Models.Entities.Employee item in ls1)
                                                        {
                                                            <option value="@item.id" data-id="">@item.username</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <h7>Người phỏng vấn 3</h7>
                                                    <select name="id_emp2" id="id_emp2">
                                                        <option value="" selected disabled></option>
                                                        @foreach (ProjectExample.Models.Entities.Employee item in ls1)
                                                        {
                                                            <option value="@item.id" data-id="">@item.username</option>
                                                        }
                                                    </select>
                                                </div>
                                                <!--Vị trí công việc-->
                                                <!--Lịch thời gian băt đầu-->
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <input type="text" id="basic-default-datetime" class="form-control" placeholder="Select date and time" name="date_time_start" data-flatpickr="datetime" value="">
                                                    <label for="basic-default-datetime">Thời gian bắt đầu</label>
                                                </div>
                                                <!--Lịch thời gian bát đầu-->
                                                <!--Lịch thời gian Kết thúc-->
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <input type="text" id="basic-default-datetime" class="form-control" placeholder="Select date and time" name="date_time_end" data-flatpickr="datetime" value="">
                                                    <label for="basic-default-datetime1">Thời gian kết thúc</label>
                                                </div>
                                                <!--Lịch thời gian Kết thúc--> 
                                                <button type="submit" class="btn btn-primary">Create Schedule</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- Merged -->

                            </div>
                        </div>
                        <!-- / Content -->
                        <!-- Footer -->
                        @Html.Partial("~/Views/Admin/Menu/footer.cshtml")
                        <!-- / Footer -->

                        <div class="content-backdrop fade"></div>
                    </div>
                    <!-- Content wrapper -->
                </div>
                <!-- / Layout page -->
            </div>

            <!-- Overlay -->
            <div class="layout-overlay layout-menu-toggle"></div>
        </div>
        <!-- / Layout wrapper -->

        <div class="buy-now">
            <a href="https://themeselection.com/item/materio-bootstrap-html-admin-template/"
               target="_blank"
               class="btn btn-danger btn-buy-now">Upgrade to Pro</a>
        </div>

        <!-- Core JS -->
        <!-- build:js assets/vendor/js/core.js -->
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/jquery/jquery.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/popper/popper.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/js/bootstrap.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/node-waves/node-waves.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/perfect-scrollbar/perfect-scrollbar.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/js/menu.js")

        <!-- endbuild -->
        <!-- Vendors JS -->
        <!-- Main JS -->

        @Scripts.Render("~/Content/Admin/assets/js/main.js")

        <!-- Page JS -->
        <!-- Place this tag in your head or just before your close body tag. -->
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        <script>
            flatpickr("#basic-default-datetime", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
            flatpickr("#basic-default-datetime1", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        </script>
    </body>

</html5>
