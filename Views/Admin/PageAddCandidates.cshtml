
@model ProjectExample.Models.Entities.Cadidate
@{
    ViewBag.Title = "PageAddCandidates";
    //Layout = "~/Views/Admin/";
    //List<ProjectExample.Models.Entities.Vancacy> lsvancacies = new List<ProjectExample.Models.Entities.Vancacy>();
    List<ProjectExample.Models.Entities.Vancacy> lsvancacies = new List<ProjectExample.Models.Entities.Vancacy>();
    if (ViewBag.vanacies != null)
    {
        lsvancacies = ViewBag.vanacies;
    }
}


<!DOCTYPE html>
<html5 lang="en"
       class="light-style layout-menu-fixed layout-compact"
       dir="ltr"
       data-theme="theme-default"
       data-assets-path="../assets/"
       data-template="vertical-menu-template-free">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

        <title>Vertical Layouts - Forms | Materio - Bootstrap Material Design Admin Template</title>

        <meta name="description" content="" />

        @Styles.Render(Url.Content("~/Content/Admin/assets/img/favicon/favicon.ico"))

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&ampdisplay=swap"
              rel="stylesheet" />

        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/node-waves/node-waves.css"))

        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/core.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/theme-default.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/css/demo.css"))
        <!-- Menu waves for no-customizer fix -->
        <!-- Core CSS -->
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/apex-charts/apex-charts.css"))

        <!--Lịch-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <!-- Page CSS -->
        <!-- Helpers -->
        @Scripts.Render("~/Content/Admin/assets/vendors/js/helpers.js")

        <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
        <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
        @Scripts.Render("~/Content/Admin/assets/js/config.js")
    </head>
    <body>

        <div class="layout-wrapper layout-content-navbar">
            <div class="layout-container">
                <!-- Menu -->
                @Html.Partial("~/Views/Admin/Menu/Menu.cshtml")
                <!-- / Menu -->
                <!-- Layout container -->
                <div class="layout-page">
                    <!-- Navbar -->
                    @Html.Partial("~/Views/Admin/Menu/Navbar.cshtml")
                    <!-- / Navbar -->
                    <!-- Content wrapper -->
                    <div class="content-wrapper">
                        <!-- Content -->

                        <div class="container-xxl flex-grow-1 container-p-y">
                            <h4 class="py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Vertical Layouts</h4>

                            <!-- Basic Layout -->
                            <div class="row">
                                <div class="col-xl">
                                    <div class="card mb-4">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">Thêm thông tin ứng viên</h5>
                                            <small class="text-muted float-end">Add Cadidate</small>
                                        </div>
                                        <div class="card-body">
                                            <form action="/Admin/CreateCadidate" method="post" enctype="multipart/form-data">
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <input type="text" class="form-control" id="Name_cadidate" name="Name_cadidate" value="@Model.Name_cadidate" />
                                                    <label for="basic-default-fullname">Tên ứng viên</label>
                                                </div>
                                                <!--Vị trí công việc-->
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <h7>Vị Trí Công Việc</h7>
                                                    <select name="id_vanacy" id="id_vanacy">
                                                        @foreach (ProjectExample.Models.Entities.Vancacy item in lsvancacies)
                                                        {
                                                            <option value="@item.id" data-id="@item.id" @(item.id == Model.id_vanacy ? "selected" : "")>@item.title_job_position</option>
                                                        }
                                                    </select>

                                                </div>
                                                <!--Vị trí công việc-->
                                                <!--Lịch thời gian-->
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <input type="text" id="basic-default-datetime" class="form-control" placeholder="Select date and time" name="date_time" data-flatpickr="datetime" value="@Model.date_time">
                                                    <label for="basic-default-datetime">Thời gian lên lịch</label>
                                                </div>
                                                <!--Lịch thời gian-->
                                                <div class="mb-4">
                                                    <div class="input-group input-group-merge">
                                                        <span class="input-group-text"><i class="mdi mdi-email-outline"></i></span>
                                                        <input type="text"
                                                               id="email"
                                                               name="email"
                                                               class="form-control"
                                                               placeholder="Email"
                                                               value="@Model.email"
                                                               aria-label="Email"
                                                               aria-describedby="basic-icon-default-email2" />
                                                        <span id="basic-icon-default-email2" class="input-group-text">@@gmail.com</span>
                                                    </div>

                                                </div>
                                                <div class="input-group input-group-merge mb-4">
                                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                                        <i class="mdi mdi-phone"></i>
                                                    </span>
                                                    <input type="text"
                                                           id="phone"
                                                           name="phone"
                                                           class="form-control phone-mask"
                                                           placeholder="Số điện thoại"
                                                           aria-label="Phone No"
                                                           value="@Model.phone"
                                                           aria-describedby="basic-icon-default-phone2" />
                                                </div>
                                                <!--Send File pdf for cadidate-->
                                                <div class="input-group input-group-merge m-4">
                                                    <h7>Nộp CV Ứng Viên</h7>
                                                    <input type="file" name="ff" id="ff" />
                                                </div>
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- Merged -->

                            </div>
                        </div>
                        <!-- / Content -->
                        <!-- Footer -->
                        @Html.Partial("~/Views/Admin/Menu/footer.cshtml")
                        <!-- / Footer -->

                        <div class="content-backdrop fade"></div>
                    </div>
                    <!-- Content wrapper -->
                </div>
                <!-- / Layout page -->
            </div>

            <!-- Overlay -->
            <div class="layout-overlay layout-menu-toggle"></div>
        </div>
        <!-- / Layout wrapper -->

        <div class="buy-now">
            <a href="https://themeselection.com/item/materio-bootstrap-html-admin-template/"
               target="_blank"
               class="btn btn-danger btn-buy-now">Upgrade to Pro</a>
        </div>

        <!-- Core JS -->
        <!-- build:js assets/vendor/js/core.js -->
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/jquery/jquery.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/popper/popper.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/js/bootstrap.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/node-waves/node-waves.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/perfect-scrollbar/perfect-scrollbar.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/js/menu.js")

        <!-- endbuild -->
        <!-- Vendors JS -->
        <!-- Main JS -->

        @Scripts.Render("~/Content/Admin/assets/js/main.js")

        <!-- Page JS -->
        <!-- Place this tag in your head or just before your close body tag. -->
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        <script>
            flatpickr("#basic-default-datetime", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        </script>
    </body>

</html5>
