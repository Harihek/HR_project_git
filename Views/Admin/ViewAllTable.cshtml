
@{
    ViewBag.Title = "ViewAllTable";
    //Layout = "~/Views/Admin/";
    //List<ProjectExample.Models.Entities.Cadidate_Vanacies> lscadidate = new List<ProjectExample.Models.Entities.Cadidate_Vanacies>();
    //if (ViewBag.cadidates != null)
    //{
    //    lscadidate = ViewBag.cadidates;
    //}
    List<ProjectExample.Models.Entities.Employ_Vanacies> ls = new List<ProjectExample.Models.Entities.Employ_Vanacies>();
    if (ViewBag.Vanacys != null)
    {
        ls = ViewBag.Vanacys;
    }

    int index = 1;

}

<!DOCTYPE html>

<html lang="en"
      class="light-style layout-menu-fixed layout-compact"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Tables - Basic Tables | Materio - Bootstrap Material Design Admin Template</title>

    <meta name="description" content="" />

    <!-- Favicon -->
    @Styles.Render(Url.Content("~/Content/Admin/assets/img/favicon/favicon.ico"))

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&ampdisplay=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/node-waves/node-waves.css"))

    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/core.css"))
    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/theme-default.css"))
    @Styles.Render(Url.Content("~/Content/Admin/assets/css/demo.css"))
    <!-- Menu waves for no-customizer fix -->
    <!-- Core CSS -->
    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"))
    @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/apex-charts/apex-charts.css"))

    <!-- Page CSS -->
    <!-- Helpers -->
    @Scripts.Render("~/Content/Admin/assets/vendors/js/helpers.js")

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    @Scripts.Render("~/Content/Admin/assets/js/config.js")
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->

            @Html.Partial("~/Views/Admin/Menu/Menu.cshtml")
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                @Html.Partial("~/Views/Admin/Menu/Navbar.cshtml")

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">
                        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Tables /</span> Basic Tables</h4>

                        <!-- Basic Bootstrap Table -->
                        <div class="card">
                            <h5 class="card-header" style="display: flex; justify-content: center; align-items: center; height: 100%;">Danh Sách Đề Xuất Tuyển Dụng Vị Trí Công Việc</h5>
                            <div style="display: flex; align-items: center; justify-content: center">
                                <input type="text" id="searchInput" oninput="performSearch()" placeholder="Search..." style="margin-right: 10px;border-radius: 15px;width:350px" />
                                <a class="btn btn-info btn-lg" type="button" href="@Url.Action("PageAddVancacy","Admin")" style="height: 40px; width: 80px; font-size: 10px;">Add info vacancies</a>
                            </div>
                            <div class="table-responsive text-nowrap">
                                @if (ViewBag.Vanacys != null)
                                {
                                    <table class="table" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Name Employee</th>
                                                <th>Title Job Position</th>
                                                <th>Decription</th>
                                                <th>status</th>
                                                <th>Quantity</th>
                                                <th>View Cadidate</th>
                                                <th>Date Submitted</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-border-bottom-0">
                                            @foreach (ProjectExample.Models.Entities.Employ_Vanacies item in ls)
                                            {
                                                <tr>
                                                    <td>
                                                        @index
                                                    </td>
                                                    <td>@item.Employee.username</td>
                                                    <td>@item.Vancacy.title_job_position</td>
                                                    <td>@Html.Raw(@item.Vancacy.decription.Replace("\n", "<br/>"))</td>
                                                    <td>
                                                        <select>
                                                            @if (@item.Vancacy.status == 0 && item.Vancacy.quantity <= 5)
                                                            {
                                                                <option value="0">Mở</option>
                                                            }
                                                            @if (@item.Vancacy.status == 2 && item.Vancacy.quantity == 5)
                                                            {
                                                                <option value="1">Khóa</option>
                                                            }
                                                            @if (item.Vancacy.status == 1 && item.Vancacy.quantity <= 5)
                                                            {
                                                                <option value="">Tạm ngưng</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td>@item.Vancacy.quantity</td>
                                                    <td><a href="@Url.Action("ViewDetails","Admin",new {id_vanacy = item.Vancacy.id})"><i class="fa-solid fa-eye"></i></a></td>
                                                    <td>@item.Vancacy.date_submitted</td>
                                                    <td><a href="@Url.Action("EditVanacy","Admin",new {id_vanacy = item.Vancacy.id})"><i class="fa-solid fa-edit"></i></a></td>
                                                </tr>
                                                index++;

                                            }


                                        </tbody>
                                    </table>

                                }
                            </div>
                        </div>
                        
                    </div>
                    <!-- / Content -->
                    <!-- Footer -->
                    @Html.Partial("~/Views/Admin/Menu/footer.cshtml")
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    <div class="buy-now">
        <a href="https://themeselection.com/item/materio-bootstrap-html-admin-template/"
           target="_blank"
           class="btn btn-danger btn-buy-now">Upgrade to Pro</a>
    </div>

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    @Scripts.Render("~/Content/Admin/assets/vendors/libs/jquery/jquery.js")
    @Scripts.Render("~/Content/Admin/assets/vendors/libs/popper/popper.js")
    @Scripts.Render("~/Content/Admin/assets/vendors/js/bootstrap.js")
    @Scripts.Render("~/Content/Admin/assets/vendors/libs/node-waves/node-waves.js")
    @Scripts.Render("~/Content/Admin/assets/vendors/libs/perfect-scrollbar/perfect-scrollbar.js")
    @Scripts.Render("~/Content/Admin/assets/vendors/js/menu.js")

    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->

    @Scripts.Render("~/Content/Admin/assets/js/main.js")

    <script>
        function performSearch() {
            var input = document.getElementById("searchInput");
            var searchText = input.value.toLowerCase();

            var table = document.getElementById("dataTable");
            var rows = table.getElementsByTagName("tr");

            for (var i = 0; i < rows.length; i++) {
                var rowData = rows[i].getElementsByTagName("td");
                var match = false;

                for (var j = 0; j < rowData.length; j++) {
                    var cellData = rowData[j].innerText.toLowerCase();

                    if (cellData.includes(searchText)) {
                        match = true;
                        break;
                    }
                }

                rows[i].style.display = match ? "" : "none";
            }
        }
    </script>
    <!-- Page JS -->
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>


