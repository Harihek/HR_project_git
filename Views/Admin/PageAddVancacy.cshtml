@model ProjectExample.Models.Entities.Vancacy

@{
    ViewBag.Title = "PageAddVacancy";
}

<h2>PageAddVacancy</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Edit Vanacy</h2>
            <form action="@Url.Action("Create", "Admin")" method="post">
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.date_submitted)
                @Html.HiddenFor(model => model.quantity)

                <div class="form-group">
                    <label for="id_emp">Employee ID</label>
                    @Html.DropDownListFor(model => model.id_emp, (SelectList)ViewBag.EmployeeList, "Select Employee", new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    <label for="title_job_position">Title Job Position</label>
                    @Html.TextBoxFor(model => model.title_job_position, new { @class = "form-control", required = "required" })
                </div>
                @*<div class="form-group">
            <label for="description">Description</label>
            @Html.TextAreaFor(model => model.decription, new { @class = "form-control", required = "required" })
        </div>*@
                <div class="form-group">
                    <label for="description">Description</label>
                    <div id="editor">
                        @Html.TextAreaFor(model => model.decription, new { style = "display:none;" }) <!-- Ẩn TextAreaFor -->
                    </div>
                </div>

                <div class="form-group">
                    <label for="status">Status</label>
                    @Html.DropDownListFor(model => model.status, new SelectList(
                        new[]
                        {
                            new SelectListItem { Value = "0", Text = "Open" },
                            new SelectListItem { Value = "1", Text = "Temporarily Suspended" },
                            new SelectListItem { Value = "2", Text = "Closed" }
                        }, "Value", "Text"), "Select Status", new { @class = "form-control", required = "required" })
                </div>
                @*<div class="form-group">
            <label for="quantity">Quantity</label>
            @Html.TextBoxFor(model => model.quantity, new { @class = "form-control", required = "required", type = "number" })
        </div>*@
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('decription'); // Biến thẻ div thành CKEditor
    </script>
}


