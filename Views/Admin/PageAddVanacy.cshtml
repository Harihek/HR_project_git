@model ProjectExample.Models.Entities.Vancacy
@{
    ViewBag.Title = "PageAddVanacy";
    //Layout = "~/Views/Admin/";
}

<!DOCTYPE html>
<html5 lang="en"
       class="light-style layout-menu-fixed layout-compact"
       dir="ltr"
       data-theme="theme-default"
       data-assets-path="../assets/"
       data-template="vertical-menu-template-free">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

        <title>Vertical Layouts - Forms | Materio - Bootstrap Material Design Admin Template</title>

        <meta name="description" content="" />

        @Styles.Render(Url.Content("~/Content/Admin/assets/img/favicon/favicon.ico"))

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&ampdisplay=swap"
              rel="stylesheet" />

        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/node-waves/node-waves.css"))

        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/fonts/materialdesignicons.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/core.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/css/theme-default.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/css/demo.css"))
        <!-- Menu waves for no-customizer fix -->
        <!-- Core CSS -->
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"))
        @Styles.Render(Url.Content("~/Content/Admin/assets/vendor/libs/apex-charts/apex-charts.css"))

        <!--Lịch-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <!-- Page CSS -->
        <!-- Helpers -->
        @Scripts.Render("~/Content/Admin/assets/vendors/js/helpers.js")

        <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
        <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
        @Scripts.Render("~/Content/Admin/assets/js/config.js")
    </head>
    <body>

        <div class="layout-wrapper layout-content-navbar">
            <div class="layout-container">
                <!-- Menu -->
                @Html.Partial("~/Views/Admin/Menu/Menu.cshtml")
                <!-- / Menu -->
                <!-- Layout container -->
                <div class="layout-page">
                    <!-- Navbar -->
                    @Html.Partial("~/Views/Admin/Menu/Navbar.cshtml")
                    <!-- / Navbar -->
                    <!-- Content wrapper -->
                    <div class="content-wrapper">
                        <!-- Content -->

                        <div class="container-xxl flex-grow-1 container-p-y">
                            <h4 class="py-3 mb-4"><span class="text-muted fw-light"></span></h4>

                            <!-- Basic Layout -->
                            <div class="row">
                                <div class="col-xl">
                                    <div class="card mb-4">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">Thêm thông tin ứng tuyển công việc</h5>
                                            <small class="text-muted float-end">Add Vancacy</small>
                                        </div>
                                        <div class="card-body">
                                            <form action="/Admin/CreateVanacy" method="post" enctype="multipart/form-data" id="frmData">
                                                <div class="form-floating form-floating-outline mb-4">
                                                    <input type="text" class="form-control" id="title_job_position" name="title_job_position" value="@Model.title_job_position" />
                                                    <label for="basic-default-fullname">Tên vị trí ứng tuyển</label>
                                                </div>
                                                <!--Vị trí công việc-->
                                                <!--Lịch thời gian-->

                                                <div class="form-floating form-floating-outline mb-4">
                                                    <h7>Miêu tả chi tiết</h7>
                                                    <div id="editor">

                                                    </div>
                                                    <input type="hidden" id="myData" name="myData" value="" />

                                                </div>
                                                @*<div class="form-floating form-floating-outline mb-4">
                                                    <input type="text" id="basic-default-datetime" class="form-control" placeholder="Select date and time" name="date_time" data-flatpickr="datetime" value="@Model.date_submitted">
                                                    <label for="basic-default-datetime">Thời gian lên lịch</label>
                                                </div>*@


                                                <button type="submit" class="btn btn-primary" id="btnSave">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- Merged -->

                            </div>
                        </div>
                        <!-- / Content -->
                        <!-- Footer -->
                        @Html.Partial("~/Views/Admin/Menu/footer.cshtml")
                        <!-- / Footer -->

                        <div class="content-backdrop fade"></div>
                    </div>
                    <!-- Content wrapper -->
                </div>
                <!-- / Layout page -->
            </div>

            <!-- Overlay -->
            <div class="layout-overlay layout-menu-toggle"></div>
        </div>
        <!-- / Layout wrapper -->

        <div class="buy-now">
            <a href="https://themeselection.com/item/materio-bootstrap-html-admin-template/"
               target="_blank"
               class="btn btn-danger btn-buy-now">Upgrade to Pro</a>
        </div>

        <!-- Core JS -->
        <!-- build:js assets/vendor/js/core.js -->
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/jquery/jquery.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/popper/popper.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/js/bootstrap.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/node-waves/node-waves.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/libs/perfect-scrollbar/perfect-scrollbar.js")
        @Scripts.Render("~/Content/Admin/assets/vendors/js/menu.js")

        <!-- endbuild -->
        <!-- Vendors JS -->
        <!-- Main JS -->

        @Scripts.Render("~/Content/Admin/assets/js/main.js")

        <!-- Page JS -->
        <!-- Place this tag in your head or just before your close body tag. -->
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/Scripts/ckeditor/ckeditor.js"></script>
        <script>
            flatpickr("#basic-default-datetime", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
            CKEDITOR.replace('editor');
            $(document).ready(function () {
                $('#btnSave').click(function (e) {
                    e.preventDefault();
                    //var te = $("#editor").html();
                    var t = "Hello word";
                    var ena = CKEDITOR.instances['editor'].getData();
                    //var enacodeData = encodeURIComponent(ena);
                    //var ena1 = ViewBag.myValue;
                    //var w = CKEDITOR.instances['editor'].setData(ena1);
                    console.log(ena);
                    //console.log("HELLO123");
                    $("#myData").val(ena);
                    $("#frmData").submit();
                });
            })

        </script>
        <script>
            flatpickr("#basic-default-datetime", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        </script>
    </body>

</html5>


